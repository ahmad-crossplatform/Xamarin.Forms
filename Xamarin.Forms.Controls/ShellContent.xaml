<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 Title="Welcome"
			 Routing.Route="shellcontent"
			 Shell.SetPaddingInsets="true"
			 ShellAppearance.TabBarVisible="false"
             x:Class="Xamarin.Forms.Controls.ShellContent">
	<Page.ToolbarItems>
		<ToolbarItem Text="Search" Icon="bank.png" />
	</Page.ToolbarItems>
	<!--<Shell.SearchHandler>
		<SearchHandler Placeholder="My Placeholder!" />
	</Shell.SearchHandler>-->
    <StackLayout>
		<Button x:Name="_toggleButton"  Margin="0, 40, 0, 0"  HorizontalOptions="Center"  Text="Toggle" BackgroundColor="Red" />
        <Label x:Name="_mainLabel"  Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="Center" />
		<Button x:Name="_queryButton" HorizontalOptions="Center"  Text="Query Navigate" BackgroundColor="Red" />
		<Button x:Name="_navButton" HorizontalOptions="Center"  Text="URI Navigate" BackgroundColor="Red" />
		<Button x:Name="_popToRootButton" HorizontalOptions="Center"  Text="Pop To Root" BackgroundColor="Red" />
		<Button x:Name="_popButton" HorizontalOptions="Center"  Text="Pop page" BackgroundColor="Red" />
		<Button x:Name="_pushButton" Margin="0, 0, 0, 30" HorizontalOptions="Center"  Text="Push page" BackgroundColor="Red" />
	</StackLayout>
</ContentPage>