<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 Title="Welcome"
             x:Class="Xamarin.Forms.Controls.ShellContent">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Center" />
			<Button x:Name="_popToRootButton" HorizontalOptions="Center"  Text="Pop To Root" BackgroundColor="Red" />
			<Button x:Name="_popButton" HorizontalOptions="Center"  Text="Pop page" BackgroundColor="Red" />
			<Button x:Name="_pushButton" Margin="0, 0, 0, 30" HorizontalOptions="Center"  Text="Push page" BackgroundColor="Red" />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>