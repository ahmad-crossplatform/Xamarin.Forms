<?xml version="1.0" encoding="utf-8" ?>
<Shell	xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:Xamarin.Forms.Controls"
		x:Class="Xamarin.Forms.Controls.ShellTest"
		Route="s"
		FlyoutBackgroundColor="#bbffffff"
		FlyoutHeaderBehavior="Scroll">
	<Shell.FlyoutHeader>
		<Grid BackgroundColor="#330088ff" HeightRequest="170">
			<Label Text="FLYOUT HEADER" VerticalOptions="Center" HorizontalOptions="Center" />
		</Grid>
	</Shell.FlyoutHeader>
	<Shell.MenuItemTemplate>
		<DataTemplate>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Image Source="{Binding Icon}" HorizontalOptions="End"  VerticalOptions="Center" />
				<Label Grid.Column="1"  Text="{Binding Text}" VerticalOptions="Center" Margin="20, 0, 0, 0" />
			</Grid>
		</DataTemplate>
	</Shell.MenuItemTemplate>
	<Shell.ItemTemplate>
		<DataTemplate>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Image Source="{Binding Icon}" HorizontalOptions="End"  VerticalOptions="Center" />
				<Label Grid.Column="1"  Text="{Binding Title}" VerticalOptions="Center" Margin="20, 0, 0, 0" />
			</Grid>
		</DataTemplate>
	</Shell.ItemTemplate>
	<Shell.MenuItems>
		<MenuItem x:Name="_duck"  Text="Click Me!" />
	</Shell.MenuItems>
	<ShellItem Route="home"  Title="Home" Icon="calculator.png" GroupBehavior="ShowTabs">
		<ShellTabItem Route="updates"  Title="Updates" Icon="coffee.png" Content="Foo"  ContentTemplate="{DataTemplate local:ShellContent}">
			<ShellItem.ShellAppearance>
				<ShellAppearance ForegroundColor="#ff0000" BackgroundColor="#77FF77ff" UnselectedColor="#99ffff00" TitleColor="#00ff00" />
			</ShellItem.ShellAppearance>
		</ShellTabItem>
		<ShellTabItem Route="games"  Title="Games" Icon="coffee.png">
			<ShellTabItem.MenuItems>
				<MenuItem Text="Game Options" Icon="3bar.png" />
			</ShellTabItem.MenuItems>
			<ContentPage Title="Testing Games" BackgroundColor="Red" />
		</ShellTabItem>
		<ShellTabItem Route="buttons"  Title="Buttons" Icon="coffee.png">
			<local:ButtonGallery />
		</ShellTabItem>
	</ShellItem>
	<ShellItem Route="apps"  Title="Apps" Icon="calculator.png">
		<ShellTabItem Route="books"  Title="Books" Icon="coffee.png">
			<ContentPage Title="Testing Apps" BackgroundColor="Purple">
				<Shell.BackButtonBehavior>
					<BackButtonBehavior IconOverride="bank.png" />
				</Shell.BackButtonBehavior>
				<Label Text="Hello World" VerticalOptions="Center" HorizontalOptions="Center" />
			</ContentPage>
		</ShellTabItem>
		<ShellTabItem Route="movies"  Title="Movies" Icon="coffee.png">
			<ContentPage Title="Testing Movies" BackgroundColor="Gray" />
		</ShellTabItem>
	</ShellItem>
</Shell>